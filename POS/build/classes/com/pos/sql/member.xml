<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Member">
	<select id="srcMemInfo" resultType="map">
		SELECT *
		FROM
			MEMB_TBL
		WHERE 
			1=1
		<if test="!MOB_PH_NO.equals('')">
			AND MOB_PH_NO LIKE '%'||#{MOB_PH_NO}||'%'
		</if>
		<!--<if test="MEMB_SER_NO != ''">
			AND MEMB_SER_NO = #{MEMB_SER_NO}
		</if>
		<if test="!ID_NO.equals('')">
			AND ID_NO LIKE '%'||#{ID_NO}||'%'
		</if>
		<if test="!BUSI_NO.equals('')">
			AND BUSI_NO LIKE '%'||#{BUSI_NO}||'%'
		</if> -->
	</select>
	
	<!-- 등록전 주민번호로 중복 회원이 존재하는지 조회 -->
	<select id="memInfoExistCntByIdNo" resultType="int" parameterType="com.pos.Vo.MemberVo">
		SELECT
			COUNT(*)
		FROM
			MEMB_TBL
		WHERE
			1=1
			<if test="!ID_NO.equals('')">
				AND ID_NO = #{ID_NO}
			</if>
			<if test="!BUSI_NO.equals('')">
				AND BUSI_NO = #{BUSI_NO}
			</if>
	</select>
	
	<!-- 존재한다면 주민번호로 회원번호 select -->
	<select id="doExistMemberSrcMemSerNoByIdNo" parameterType="com.pos.Vo.MemberVo" resultType="map">
		SELECT
			*
		FROM
			MEMB_TBL
		WHERE
			1=1
			<if test="!ID_NO.equals('')">
				AND ID_NO = #{ID_NO}
			</if>
			<if test="!BUSI_NO.equals('')">
				AND BUSI_NO = #{BUSI_NO}
			</if>
	</select>
	
	<!-- 약식 & 정식 회원가입 -->
	<insert id="addMember" parameterType="com.pos.Vo.MemberVo">
	<selectKey order="BEFORE" keyProperty="MEMB_SER_NO" resultType="String">
		SELECT 
			MEM_ID_SEQ.NEXTVAL
		FROM
			DUAL
	</selectKey>
	<choose>
		<when test="EMAIL.equals('none')">
			INSERT INTO MEMB_TBL(
				MEMB_SER_NO
				,MEMB_NM
				,MEMB_ENG_NM
				,MOB_PH_NO
				,PERS_COP_TY
				<if test="PERS_COP_TY == 1">
					,ID_NO
				</if>
				<if test="PERS_COP_TY == 2">
					,BUSI_NO
				</if>
			)
			VALUES(
				#{MEMB_SER_NO}
				,#{MEMB_NM}
				,#{MEMB_ENG_NM}
				,#{MOB_PH_NO}
				,#{PERS_COP_TY}
				<if test="PERS_COP_TY == 1">
					,#{ID_NO}
				</if>
				<if test="PERS_COP_TY == 2">
					,#{BUSI_NO}
				</if>
			)
		</when>
		<otherwise>
			INSERT INTO MEMB_TBL(
				<if test="PERS_COP_TY == 1">
					MEMB_SER_NO
					,PERS_COP_TY
					,MEMB_NM
					,PH_NO
					,ID_NO
					,MEMB_ENG_NM
					,BIR_DAY
					,MOB_PH_NO
					<if test="POST_NO != null">
						,POST_NO
						,ADDR_1
						,ADDR_2
					</if>
					,EMAIL
				</if>
				<if test="PERS_COP_TY == 2">
					MEMB_SER_NO
					,PERS_COP_TY
					,BUSI_NO
					,PH_NO
					,MEMB_ENG_NM
					,BIR_DAY
					,MOB_PH_NO
					<if test="POST_NO != null">
						,POST_NO
						,ADDR_1
						,ADDR_2
					</if>
					,EMAIL
				</if>
			)
			VALUES(
				<if test="PERS_COP_TY == 1">
					#{MEMB_SER_NO}
					,#{PERS_COP_TY}
					,#{MEMB_NM}
					,#{PH_NO}
					,#{ID_NO}
					,#{MEMB_ENG_NM}
					,#{BIR_DAY}
					,#{MOB_PH_NO}
					<if test="POST_NO != null">
						,#{POST_NO}
						,#{ADDR_1}
						,#{ADDR_2}
					</if>
					,#{EMAIL}
				</if>
				<if test="PERS_COP_TY == 2">
					#{MEMB_SER_NO}
					,#{PERS_COP_TY}
					,#{BUSI_NO}
					,#{PH_NO}
					,#{MEMB_ENG_NM}
					,#{BIR_DAY}
					,#{MOB_PH_NO}
					<if test="POST_NO != null">
						,#{POST_NO}
						,#{ADDR_1}
						,#{ADDR_2}
					</if>
					,#{EMAIL}
				</if>
			)
		</otherwise>
	</choose>
	</insert>
	
	<select id="getMember" parameterType="com.pos.Vo.MemberVo" resultType="com.pos.Vo.MemberVo">
		SELECT *
		FROM
			MEMB_TBL
		WHERE
			MEMB_SER_NO = #{MEMB_SER_NO}
	</select>
	
	<select id="totalMemCnt" resultType="int">
		SELECT
			COUNT(*)
		FROM
			MEMB_TBL
	</select>
</mapper>